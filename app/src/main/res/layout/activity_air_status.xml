<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".view.AirStatusActivity">

    <Button
        android:id="@+id/checkAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textview_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:text="상세 정보 조회"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#999999"
        android:showDividers="beginning|middle|end"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:layout_width="200dp"
                android:padding="8dp"
                android:text="시군구"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/cityTextView"
                android:textColor="@android:color/black"
                tools:text="광진구" />

        </TableRow>

        <TableRow>

            <TextView
                android:padding="8dp"
                android:text="측정일시"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/dateTimeTextView"
                android:textColor="@android:color/black"
                tools:text="2016-07-21 08:00" />

        </TableRow>

        <TableRow>

            <TextView
                android:padding="8dp"
                android:text="아황산가스 평균농도"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/so2ValueTextView"
                android:textColor="@android:color/black"
                tools:text="0.004" />

        </TableRow>

        <TableRow>

            <TextView
                android:padding="8dp"
                android:text="일산화탄소 평균농도"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/coValueTextView"
                android:textColor="@android:color/black"
                tools:text="0.4" />

        </TableRow>

        <TableRow>

            <TextView
                android:padding="8dp"
                android:text="오존 평균농도"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/o3ValueTextView"
                android:textColor="@android:color/black"
                tools:text="0.005" />

        </TableRow>

        <TableRow>

            <TextView
                android:padding="8dp"
                android:text="이산화질소 평균농도"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/no2ValueTextView"
                android:textColor="@android:color/black"
                tools:text="0.027" />

        </TableRow>

        <TableRow>

            <TextView
                android:padding="8dp"
                android:text="미세먼지 평균농도"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pm10ValueTextView"
                android:textColor="@android:color/black"
                tools:text="28" />

        </TableRow>

        <TableRow>

            <TextView
                android:padding="8dp"
                android:text="초미세먼지 평균농도"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pm25ValueTextView"
                android:textColor="@android:color/black"
                tools:text="17" />

        </TableRow>

    </TableLayout>
</LinearLayout>